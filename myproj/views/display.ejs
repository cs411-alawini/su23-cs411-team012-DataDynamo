<!DOCTYPE html>
<html>
<head>
  <title>Display</title>
  <style>
    body {
      font-family: Verdana, sans-serif;
      background-color: #8AAAE5;            
    }

    .table-container {
      display: flex;
      justify-content: space-around;
      flex-wrap: wrap;
    }

    .styled-table {
      border-collapse: collapse;
      margin: 25px 0;
      font-size: 0.9em;
      font-family: Verdana, sans-serif;
      min-width: 400px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
      float: left;
      margin-right: 50px;
      flex: 1;
    }

    .styled-table thead tr {
      background-color: #009879;
      color: #ffffff;
      text-align: left;
    }

    .styled-table th,
    .styled-table td {
      padding: 12px 15px;
    }

    .styled-table tbody tr {
      border-bottom: 1px solid #dddddd;
    }

    .styled-table tbody tr:nth-of-type(even) {
      background-color: #f3f3f3;
    }

    .styled-table tbody tr:last-of-type {
      border-bottom: 2px solid #009879;
    }

    .styled-table tbody tr.active-row {
      font-weight: bold;
      color: #009879;
    }

    h1 {
      font-family: Verdana, sans-serif;
      font-size: 24px;
      font-weight: bold;
    }

    .styled-table td {
      background-color: white;
    }
  </style>
</head>
<body>
  <div class="table-container">
  <div>
  <h1>Recommended Treatments</h1>

  <table class="styled-table">
   <thead>
    <tr>
      <th>Treatment Name</th>
      <th>Treatment Count</th>
    </tr>
   </thead>
   <tbody>
    <% if (data.length > 0) {
      let count = 0;
      data.forEach(function(result) { %>
        <% if (count < 15) { %>
          <tr>
            <td><%= result.treatments %></td>
            <td><%= result.treatmentCount %></td>
          </tr>
        <% } %>
        <% count++; %>
    <% });
    } %>
  </tbody>
  </table>
  </div>

 <div>
 <h1>Possible Conditions</h1>
  <table class="styled-table">
  <thead>
    <tr>
      <th>Condition Name</th>
      <th>Condition Count</th>
    </tr>
  </thead>
  <tbody>
    <% if (data.length > 0 && data.length <= 15) {
        data.forEach(function(result) { %>
            <tr>
              <td><%= result.conditions %></td>
              <td><%= result.conditionCount %></td>
            </tr>
      <% });
      } else {
        data.slice(15).forEach(function(result) { %>
            <tr>
              <td><%= result.conditions %></td>
              <td><%= result.conditionCount %></td>
            </tr>
      <% });
      }
    %>
  </tbody>
  </table>
  </div>
  </div>
  <form action="go_back" method="get">
    <button type="submit" class="btn btn-submit" id="go_back" name="go_back">Go back</button>
  </form>
</body>
</html>

